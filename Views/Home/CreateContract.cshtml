@model Contract
@{
    ViewData["Title"] = "Create contract";
}
<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm("CreateContract", "Home", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Create contract</th>
            </tr>
            <tr>
                <td>ClientID: </td>
                <td>
                    @Html.TextBoxFor(m => m.ClientId)
                </td>
            </tr>
            <tr>
                <td>StartDate: </td>
                <td>
                    @Html.TextBoxFor(m => m.StartDate)
                </td>
            </tr>
            <tr>
                <td>EndDate: </td>
                <td>
                    @Html.TextBoxFor(m => m.EndDate)
                </td>
            </tr>
            <tr>
                <td>Type: </td>
                <td>
                    @Html.TextBoxFor(m => m.Type)
                </td>
            </tr>
            <tr>
                <td>Tech (comma-separated): </td>
                <td>
                    @Html.TextBoxFor(m => m.Tech)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit"/></td>
            </tr>
        </table>
    }